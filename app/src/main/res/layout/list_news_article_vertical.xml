<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/frogo_dimen_16dp"
    android:layout_marginEnd="@dimen/frogo_dimen_16dp"
    android:layout_marginBottom="@dimen/frogo_dimen_8dp"
    android:background="@drawable/background_card"
    android:elevation="@dimen/frogo_dimen_2dp"
    android:orientation="vertical"
    android:padding="@dimen/frogo_dimen_16dp">

    <ImageView
        android:id="@+id/iv_url"
        android:layout_width="match_parent"
        android:layout_height="@dimen/frogo_dimen_128dp"
        android:layout_marginBottom="@dimen/frogo_dimen_8dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="@string/frogo_is_empty_data"
        android:textColor="?attr/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_published"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/frogo_dimen_8dp"
        android:maxLines="1"
        android:text="@string/frogo_is_empty_data"
        android:textColor="?attr/colorTextSubTitle" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:text="@string/frogo_is_empty_data"
        android:textColor="?attr/colorTextDescription" />

</LinearLayout>